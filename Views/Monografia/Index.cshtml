@model IEnumerable<MonografiasIfma.Models.Monografia>

@{
    ViewData["Title"] = "Index";
}

<h1>Index</h1>

<p>
    <a asp-action="Create">Create New</a>
</p>
<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.Titulo)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.DataApresentacao)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.QtPaginas)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Pdf_ArquivoBinario)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Aluno)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Orientador)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.Titulo)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.DataApresentacao)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.QtPaginas)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Pdf_ArquivoBinario)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Aluno.Campus)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Orientador.Campus)
            </td>
            <td>
                <a asp-action="Edit" asp-route-id="@item.Id">Edit</a> |
                <a asp-action="Details" asp-route-id="@item.Id">Details</a> |
                <a asp-action="Delete" asp-route-id="@item.Id">Delete</a>
            </td>
        </tr>
}
    </tbody>
</table>
